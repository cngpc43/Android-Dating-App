<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomBar"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_alignParentBottom="true"
    android:background="@color/white"
    android:orientation="horizontal"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent">

    <FrameLayout
        android:id="@+id/home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/home_selected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        </LinearLayout>

        <ImageView
            android:id="@+id/icon_home"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center|center_vertical"
            android:src="@drawable/heart_angle_svgrepo_com"
            android:tint="@color/primary"
            tools:ignore="UseAppTint" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/message"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/chat_selected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <ImageView
            android:id="@+id/icon_chat"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center|center_vertical"
            android:src="@drawable/chat_round_dots_svgrepo_com"
            android:tint="@color/black"
            tools:ignore="UseAppTint" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/notification"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/noti_selected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <ImageView
            android:id="@+id/icon_noti"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center|center_vertical"
            android:src="@drawable/bell_svgrepo_com"
            android:tint="@color/black"
            tools:ignore="UseAppTint" />
    </FrameLayout>

    <FrameLayout
        android:id="@+id/user"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/user_selected"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" />

        <ImageView
            android:id="@+id/icon_user"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="center|center_vertical"
            android:src="@drawable/user_svgrepo_com"
            android:tint="@color/black"
            tools:ignore="UseAppTint" />
    </FrameLayout>
</LinearLayout>