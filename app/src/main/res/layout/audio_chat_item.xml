<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">

    <!-- Sender Layout -->
    <LinearLayout
        android:id="@+id/audio_sent_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="6dp"
        android:orientation="vertical"
        android:padding="2dp">

        <TextView
            android:id="@+id/audio_sent_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="11:00 PM"
            android:textColor="@color/secondary2"
            android:textSize="7pt" />

        <FrameLayout
            android:id="@+id/audio_sent_frame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_message_send"
            android:backgroundTint="@color/message_sent"
            android:layout_gravity="end"
            android:padding="10dp">

            <Button
                android:id="@+id/play_audio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play" />
        </FrameLayout>
    </LinearLayout>

    <!-- Receiver Layout -->
    <LinearLayout
        android:id="@+id/audio_receive_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="6dp"
        android:orientation="vertical"
        android:padding="2dp">

        <TextView
            android:id="@+id/audio_receive_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11:00 PM"
            android:textColor="@color/secondary2"
            android:textSize="7pt" />

        <FrameLayout
            android:id="@+id/audio_frame_receive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_message_receive"
            android:backgroundTint="@color/message_receive"
            android:padding="10dp">

            <Button
                android:id="@+id/received_play_audio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Play" />

        </FrameLayout>
    </LinearLayout>
</RelativeLayout>